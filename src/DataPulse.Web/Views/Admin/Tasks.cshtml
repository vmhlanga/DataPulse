@using System.Linq
@model IEnumerable<DataPulse.Domain.Models.ProcessMaster>

<div class="container py-4">
    <div class="d-flex flex-wrap justify-content-between align-items-start mb-4 gap-3">
        <div>
            <p class="text-uppercase text-secondary fw-semibold small mb-1">Admin</p>
            <h1 class="fw-bold mb-1">Process inventory</h1>
            <p class="text-muted mb-0">Review the processes available to end users and verify their configuration.</p>
        </div>
        <div class="bg-light border rounded p-3 text-end" style="min-width: 260px; max-width: 360px;">
            <div class="fw-semibold text-secondary text-uppercase small">Summary</div>
            <div class="display-6 fw-bold mb-1">@Model?.Count() ?? 0</div>
            <div class="text-muted">Processes registered</div>
            <a class="btn btn-outline-primary btn-sm mt-3" href="/tasks">View catalog</a>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle mb-0">
                <thead class="table-light">
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Description</th>
                    <th scope="col" class="text-center">Steps</th>
                </tr>
                </thead>
                <tbody>
                @if (Model?.Any() == true)
                {
                    foreach (var process in Model)
                    {
                        <tr>
                            <td class="fw-semibold">@process.ProcessName</td>
                            <td class="text-muted">@process.ProcessDescription</td>
                            <td class="text-center">
                                <span class="badge bg-secondary">@process.Steps.Count</span>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="3" class="text-center text-muted">No processes registered yet.</td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>
