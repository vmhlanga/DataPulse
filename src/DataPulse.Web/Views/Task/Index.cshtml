@using System.Linq
@model IEnumerable<DataPulse.Domain.Models.ProcessMaster>

<div class="container py-4">
    <div class="d-flex flex-wrap justify-content-between align-items-start mb-4 gap-3">
        <div>
            <p class="text-uppercase fw-semibold text-secondary mb-1">Process Catalog</p>
            <h1 class="fw-bold mb-1">Run data jobs with confidence</h1>
            <p class="text-muted mb-0">Browse available processes, understand what they do, and jump straight into execution.</p>
        </div>
        <div class="bg-light border rounded p-3 text-end flex-grow-1" style="min-width: 260px; max-width: 360px;">
            <div class="fw-semibold text-secondary text-uppercase small">Overview</div>
            <div class="display-6 fw-bold mb-1">@Model?.Count() ?? 0</div>
            <div class="text-muted">Processes available</div>
            <a class="btn btn-outline-primary btn-sm mt-3" href="/admin/tasks">Go to Admin</a>
        </div>
    </div>

    <div class="row g-3">
        @if (Model?.Any() == true)
        {
            foreach (var item in Model)
            {
                var stepCount = item.Steps?.Count ?? 0;
                <div class="col-12 col-md-6 col-xl-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body d-flex flex-column">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <div class="badge bg-primary text-uppercase">Process</div>
                                <span class="badge bg-secondary">@stepCount @("step" + (stepCount == 1 ? string.Empty : "s"))</span>
                            </div>
                            <h5 class="card-title fw-bold">@item.ProcessName</h5>
                            <p class="card-text text-muted mb-4">@item.ProcessDescription</p>
                            <div class="mt-auto d-flex justify-content-between align-items-center">
                                <div class="text-muted small">Process ID: @item.ProcessId</div>
                                <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.ProcessId">View details</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="alert alert-info mb-0">No processes found. Add a new process from the admin area.</div>
            </div>
        }
    </div>
</div>
