@model DataPulse.Domain.Models.ProcessMaster

<div class="container py-4">
    <div class="d-flex flex-wrap justify-content-between align-items-start mb-3 gap-3">
        <div>
            <p class="text-uppercase text-secondary fw-semibold small mb-1">Process details</p>
            <h2 class="fw-bold mb-1">@Model.ProcessName</h2>
            <p class="text-muted mb-0">@Model.ProcessDescription</p>
        </div>
        <div class="d-flex align-items-start gap-2">
            <div class="text-end">
                <div class="small text-muted">Process ID</div>
                <div class="fw-semibold">@Model.ProcessId</div>
            </div>
            <form asp-action="RunTask" method="post">
                <input type="hidden" name="id" value="@Model.ProcessId" />
                <button type="submit" class="btn btn-primary">Run process</button>
            </form>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-white d-flex justify-content-between align-items-center">
            <div>
                <div class="fw-semibold">Steps</div>
                <div class="text-muted small">Each step includes the connection details and the work it performs.</div>
            </div>
            <span class="badge bg-secondary">@Model.Steps.Count @("step" + (Model.Steps.Count == 1 ? string.Empty : "s"))</span>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive mb-0">
                <table class="table table-striped table-hover align-middle mb-0">
                    <thead class="table-light">
                    <tr>
                        <th scope="col">Step Id</th>
                        <th scope="col">Name</th>
                        <th scope="col">Server</th>
                        <th scope="col">Database</th>
                        <th scope="col">Stored Proc</th>
                        <th scope="col">SSIS Package</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var step in Model.Steps)
                    {
                        <tr>
                            <td class="text-muted">@step.StepId</td>
                            <td class="fw-semibold">@step.StepName</td>
                            <td>@(string.IsNullOrWhiteSpace(step.ServerName) ? "-" : step.ServerName)</td>
                            <td>@(string.IsNullOrWhiteSpace(step.DatabaseName) ? "-" : step.DatabaseName)</td>
                            <td>
                                @if (string.IsNullOrWhiteSpace(step.SpName))
                                {
                                    <span class="badge bg-light text-muted">None</span>
                                }
                                else
                                {
                                    <span class="badge bg-info text-dark">@step.SpName</span>
                                }
                            </td>
                            <td>
                                @if (string.IsNullOrWhiteSpace(step.SsisPackageName))
                                {
                                    <span class="badge bg-light text-muted">None</span>
                                }
                                else
                                {
                                    <span class="badge bg-primary">@step.SsisPackageName</span>
                                }
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
