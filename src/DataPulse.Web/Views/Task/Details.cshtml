@model DataPulse.Domain.Models.ProcessMaster
<h2>@Model.ProcessName</h2>
<p>@Model.ProcessDescription</p>
<form asp-action="RunTask" method="post">
    <input type="hidden" name="id" value="@Model.ProcessId" />
    <button type="submit" class="btn btn-primary">Run Process</button>
</form>
<table class="table mt-3">
    <thead><tr><th>Step Id</th><th>Name</th><th>Server</th><th>Database</th><th>Stored Proc</th><th>SSIS Package</th></tr></thead>
    <tbody>
    @foreach (var step in Model.Steps)
    {
        <tr>
            <td>@step.StepId</td>
            <td>@step.StepName</td>
            <td>@step.ServerName</td>
            <td>@step.DatabaseName</td>
            <td>@step.SpName</td>
            <td>@step.SsisPackageName</td>
        </tr>
    }
    </tbody>
</table>
